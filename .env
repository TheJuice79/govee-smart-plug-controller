# Govee API key for controlling the smart plug
GOVEE_API_KEY=your_actual_govee_api_key_here

# Device MAC address of your Govee smart plug
DEVICE_MAC=your_device_mac_address_here

# Device model (e.g., H5086)
DEVICE_MODEL=your_device_model_here

# Latitude and Longitude for weather data (decimal degrees)
LAT=39.828
LON=-98.580

# Temperature threshold in Fahrenheit to turn the plug ON
TEMP_THRESHOLD=75

# Cloud cover threshold (percentage) to keep the plug ON
CLOUD_THRESHOLD=50

# Check interval in minutes (how often to check weather and update plug)
CHECK_INTERVAL=15

TZ=America/Chicago
